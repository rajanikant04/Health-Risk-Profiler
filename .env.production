# Production Environment Variables
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
ESLINT_NO_DEV_ERRORS=true
SKIP_ENV_VALIDATION=true

# Application Settings
APP_NAME=Health Risk Profiler
APP_VERSION=1.0.0
APP_URL=https://your-app-domain.vercel.app

# OCR Configuration
OCR_PROCESSING_TIMEOUT=30000
OCR_MAX_FILE_SIZE=10485760
OCR_CONFIDENCE_THRESHOLD=0.75

# Error Reporting (Optional - Configure if using Sentry)
# SENTRY_DSN=your_sentry_dsn_here
# SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Analytics (Optional - Configure if using analytics)
# ANALYTICS_ID=your_analytics_id
# GOOGLE_ANALYTICS_ID=your_ga_id

# Security
SECURE_HEADERS=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Performance
ENABLE_COMPRESSION=true
ENABLE_STATIC_OPTIMIZATION=true